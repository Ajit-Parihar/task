

<div class="new-task-container">
  <h1>Create a New Task</h1>

  <% if flash[:notice] %>
    <p class="flash-message"><%= flash[:notice] %></p>
  <% end %>

  <%= form_with model: @task, url:admin_tasks_path, class: "task-form" do |f| %>
    <div>
       <%= f.label :title %><br>
       <%= f.text_field :title, class: "input-field" %>
    </div>

    <div>
       <%= f.submit "Create Task", class: "submit-button" %>
    </div>
  <% end %>
</div>
